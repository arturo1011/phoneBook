
<h4 id="titleDetail">Add new Person</h4>


<form class="form form-horizontal" style="padding:10px;"
      name="personForm" method='post' action="/person/create" enctype='multipart/form-data'>



  <div class="form-group">
      <label class="col-lg-2" for="FullName"> FullName:</label>
    <input type="text" id="FullName"  class="form-control col-lg-10" name="FullName" required>
  </div>

  <div class="form-group">
    <label class="col-lg-2" for="Email"> Email:</label>
    <input type="email" id="Email" class="form-control col-lg-10" name="Email" required>
  </div>

  <div class="form-group">
    <label class="col-lg-2" for="Phone"> Phone:</label>
    <input type="text" id="Phone" class="form-control col-lg-10" name="Phone" required>
  </div>

  <div class="text-center">
    <div class="fileinput fileinput-new" data-provides="fileinput">
      <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;"></div>
      <div>
      <span class="btn btn-default btn-file"><span class="fileinput-new">Select image</span>
        <span class="fileinput-exists">Change</span><input type="file" name="Avatar"></span>
        <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
      </div>
    </div>
  </div>


  <div class="col-lg-12">

    <button class="btn btn-default" id="clearAll"
            type="submit" style="float:right">
      <i class="fa fa-eraser"></i> Clear all
    </button>

    <button class="btn btn-default" id="btnSavePerson"
            type="submit" style="float:right">
      <i class="fa fa-check"></i> Save

    </button>

  </div>

</form>




